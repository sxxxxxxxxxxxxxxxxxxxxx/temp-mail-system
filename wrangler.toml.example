name = "temp-mail"
main = "src/index.js"
compatibility_date = "2024-01-01"

# 静态资源 (使用新的 assets 配置)
[assets]
directory = "./public"
binding = "ASSETS"

# D1 数据库绑定
[[d1_databases]]
binding = "DB"
database_name = "temp-mail-db"
database_id = "YOUR_DATABASE_ID"  # 替换为你的数据库 ID

# 环境变量
[vars]
DOMAINS = "your-domain.com,another-domain.com"

# 开发环境
[dev]
port = 8787

# 定时任务 - 每天凌晨 2 点清理超过 24 小时的邮件
[triggers]
crons = ["0 2 * * *"]
